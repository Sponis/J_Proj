  <files>
  	<filename>component.php</filename>
	<filename>favicon.ico</filename>
  	<filename>error.php</filename>
	<filename>index.php</filename>
  	<filename>offline.php</filename>
	<filename>optimizer.php</filename>
  	<filename>template_thumbnail.png</filename>
  	<filename>template_preview.png</filename>
  	<filename>templateDetails.xml</filename>
	<folder>css</folder>
	<folder>html</folder>
	<folder>images</folder>
	<folder>js</folder>
	<folder>language</folder>
  </files>
  <positions>
  	<position>banner</position>
  	<position>breadcrumb</position>
  	<position>debug</position>
  	<position>footer</position>
  	<position>left</position>
	<position>lefttopmenu</position>
	<position>logo</position>
	<position>mainmenu</position>
	<position>right</position>
	<position>search</position>
	<position>showcase</position>
	<position>social</position>
  <position>sponis</position>
  </positions>
  <languages folder="language">
      <language tag="en-GB">en-GB/en-GB.tpl_cmsblue.ini</language>
  </languages>
  <config>
    <fields name="params">
        <fieldset name="advanced">
            <field name="generator"  type="text" default="" label="GENERATOR_LABEL" description="GENERATOR_DESCRIPTION" filter="string" />
            <field name="mootools_core_enabled" type="radio" default="1" label="MOOTOOLS_CORE_LABEL" description="MOOTOOLS_CORE_DESCRIPTION">
                <option value="0">N</option>
                <option value="1">Y</option>
            </field>
			<field name="mootools_more_enabled" type="radio" default="1" label="MOOTOOLS_MORE_LABEL" description="MOOTOOLS_MORE_DESCRIPTION">
                <option value="0">N</option>
                <option value="1">Y</option>
            </field>
            <field name="caption_enabled" type="radio" default="1" label="CAPTION_LABEL" description="CAPTION_DESCRIPTION">
                <option value="0">N</option>
                <option value="1">Y</option>
            </field>
        </fieldset>
    </fields>
  </config>
</extension>